{
  "root": true,
  "ignorePatterns": ["node_modules", "dist", ".nx", "*.config.*"],
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier",
    "plugin:import/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.base.json"]
  },
  "plugins": ["react", "@typescript-eslint", "import", "prettier", "jsx-a11y"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "apps/public-page/tsconfig.json",
          "apps/webinstaller/tsconfig.json",
          "libs/shared-ui/tsconfig.json",
          "libs/shared-types/tsconfig.json"
        ]
      }
    }
  },
  "rules": {
    "no-console": ["error", { "allow": ["info", "error", "warn"] }],
    "no-void": ["error", { "allowAsStatement": true }],
    "react/function-component-definition": ["error", { "namedComponents": "arrow-function" }],
    "react/jsx-props-no-spreading": "off",
    "react/prop-types": "off",
    "react/require-default-props": "off",
    "react/react-in-jsx-scope": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/*.config.*", "**/vite.config.*"] }],
    "@typescript-eslint/no-misused-promises": ["error", { "checksVoidReturn": { "attributes": false } }],
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["index.ts"],
      "rules": {
        "import/prefer-default-export": "off"
      }
    },
    {
      "files": ["apps/public-page/**/*.ts", "apps/public-page/**/*.tsx"],
      "parserOptions": {
        "project": ["apps/public-page/tsconfig.app.json"]
      }
    },
    {
      "files": ["apps/webinstaller/**/*.ts", "apps/webinstaller/**/*.tsx"],
      "parserOptions": {
        "project": ["apps/webinstaller/tsconfig.app.json"]
      },
      "rules": {
        "jsx-a11y/label-has-associated-control": ["error", {
          "controlComponents": ["Input", "InputSH"]
        }]
      }
    },
    {
      "files": ["libs/shared-ui/**/*.ts", "libs/shared-ui/**/*.tsx"],
      "parserOptions": {
        "project": ["libs/shared-ui/tsconfig.json"]
      }
    },
    {
      "files": ["libs/shared-types/**/*.ts"],
      "parserOptions": {
        "project": ["libs/shared-types/tsconfig.json"]
      }
    }
  ]
}
