http:
  routers:
    edulution-api:
      rule: "PathPrefix(`/edu-api`)"
      service: edulution-api
      entryPoints:
        - websecure
      tls: {}
    edulution-keycloak:
      rule: "PathPrefix(`/auth`)"
      service: edulution-keycloak
      entryPoints:
        - websecure
      tls: {}
    edulution-ui:
      rule: "PathPrefix(`/`)"
      service: edulution-ui
      entryPoints:
        - websecure
      tls: {}

  services:
    edulution-api:
      loadBalancer:
        servers:
          - url: "http://edu-api:3000"
    edulution-ui:
      loadBalancer:
        servers:
          - url: "https://edu-ui:443"
    edulution-keycloak:
      loadBalancer:
        servers:
          - url: "http://edu-keycloak:8080"